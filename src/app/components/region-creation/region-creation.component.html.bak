<div class="container">
    <h1>Hero Form</h1>
    <form #regionCreationForm="ngForm">
      <div class="form-group">
        <label for="power">Hero Power</label>
        <select class="form-control" id="power" required [(ngModel)]="model.type" name="type">
          <option *ngFor="let type of types" [value]="type.id">{{type.user_name}}</option>
        </select>
      </div>

      <button type="submit" class="btn btn-success" [disabled]="!model.type">Submit</button>

    </form>
</div>

<div class="input-group mb-3">
    <select class="form-control" placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby="basic-addon2">
        <option value="">Классический забор из профнастила вертикальный</option>
        <option value="">Забор из профильного листа</option>
    </select>
    <div class="input-group-append">
        <button class="btn btn-outline-primary" type="button">
            <span class="fa fa-plus" aria-hidden="true"></span> Добавить
        </button>
    </div>
</div>

{{diagnostic}}
